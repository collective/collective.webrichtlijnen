<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Webrichtlijnen">

 <object name="collective_webrichtlijnen_custom_images"
    meta_type="Filesystem Directory View"
    directory="collective.webrichtlijnen:skins/collective_webrichtlijnen_custom_images"/>
 <object name="collective_webrichtlijnen_custom_templates"
    meta_type="Filesystem Directory View"
    directory="collective.webrichtlijnen:skins/collective_webrichtlijnen_custom_templates"/>
 <object name="collective_webrichtlijnen_styles"
    meta_type="Filesystem Directory View"
    directory="collective.webrichtlijnen:skins/collective_webrichtlijnen_styles"/>

 <skin-path name="Webrichtlijnen" based-on="Plone Tableless">
  <layer name="collective_webrichtlijnen_custom_images"
     insert-after="custom"/>
  <layer name="collective_webrichtlijnen_custom_templates"
     insert-after="collective_webrichtlijnen_custom_images"/>
  <layer name="collective_webrichtlijnen_styles"
     insert-after="collective_webrichtlijnen_custom_templates"/>
 </skin-path>

</object>
